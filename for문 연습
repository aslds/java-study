//baekjoon-8393번
import java.util.Scanner;
class scannerex{
	public static void main(String args[]) {
		Scanner sc=new Scanner(System.in);
		int accept=sc.nextInt();
		int sum=0;
		for(int i=1;i<=accept;i++) {
			sum+=i;
		}
		System.out.print(sum);
	}
}


